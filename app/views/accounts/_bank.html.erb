<h3>Information we need to transfer money to your Bank Accont <small>(all fields are required)</small></h3>
<div class="row" style="margin-left:50px">
<form name="bankForm">

    <label class="control-label">First Name</label>
    <input type="text" name="firstName" ng-minlength=3 ng-model="user.first_name" class="form-control"
      required></input>
    <div class="error-container" ng-show="(bankForm.firstName.$touched || bankForm.firstName.$submitted) && bankForm.firstName.$invalid" >
      <small class="error" ng-show="bankForm.firstName.$error.required">First Name can't be blank.</small>
      <small class="error" ng-show="bankForm.firstName.$error.minlength">First Name is too short ( min 3 characters ).</small>
    </div>

    <label class="control-label">Last Name</label>
    <input type="text" name="lastName" ng-minlength=3 ng-model="user.last_name" class="form-control"
      required placeholder="Type Last Name"></input>
    <div class="error-container" ng-show="(bankForm.lastName.$touched || bankForm.lastName.$submitted) && bankForm.lastName.$invalid" >
      <small class="error" ng-show="bankForm.lastName.$error.required">Last Name can't be blank.</small>
      <small class="error" ng-show="bankForm.lastName.$error.minlength">Last Name is too short ( min 3 characters ).</small>
    </div>

    <label class="control-label">Email</label>
    <input type="email" name="email" ng-minlength=3 ng-maxlength=30 ng-model="user.email" class="form-control"
      placeholder="Type email" required></input>
    <div class="error-container" ng-show="(bankForm.email.$touched || bankForm.email.$submitted) && bankForm.email.$invalid" >
      <small class="error" ng-show="bankForm.email.$error.required">Email can't be blank.</small>
      <span class="error" ng-show="bankForm.email.$error.email"> Email is not valid</span>
      <small class="error" ng-show="bankForm.email.$error.minlength">Email is too short ( min 3 characters ).</small>
      <small class="error" ng-show="bankForm.email.$error.maxlength">Email is too long ( max 30 characters ).</small>
    </div>

    <label class="control-label">Street address</label>
    <input type="text" name="streetAddress" ng-minlength=3 ng-maxlength=30 ng-model="user.street_address" class="form-control"
      required></textarea>
    <div class="error-container" ng-show="(bankForm.streetAddress.$touched || bankForm.streetAddress.$submitted) && bankForm.streetAddress.$invalid" >
      <small class="error" ng-show="bankForm.streetAddress.$error.required">Street address can't be blank.</small>
      <small class="error" ng-show="bankForm.streetAddress.$error.maxlength">Street address is too long ( max 30 characters ).</small>
      <small class="error" ng-show="bankForm.streetAddress.$error.minlength">Street address is too short ( min 3 characters ).</small>
    </div>

    <label class="control-label">Postal Code</label>
    <input type="text" name="postalCode" ng-maxlength=10 ng-model="user.zip_code" class="form-control"
      required></textarea>
    <div class="error-container" ng-show="(bankForm.postalCode.$touched || bankForm.postalCode.$submitted) && bankForm.postalCode.$invalid" >
      <small class="error" ng-show="bankForm.postalCode.$error.required">Postal Code can't be blank.</small>
      <small class="error" ng-show="bankForm.postalCode.$error.maxlength">Postal Code is too long ( max 10 characters ).</small>
    </div>

    <label class="control-label">State</label>
    <input type="text" name="state" ng-maxlength=25 ng-model="user.locality" class="form-control"
      required></textarea>
    <div class="error-container" ng-show="(bankForm.state.$touched || bankForm.state.$submitted) && bankForm.state.$invalid" >
      <small class="error" ng-show="bankForm.state.$error.required">State can't be blank.</small>
      <small class="error" ng-show="bankForm.state.$error.maxlength">State is too long ( max 25 characters ).</small>
    </div>


    <label class="control-label">Date of brith</label>
    <input type="date" name="dob" ng-model="user.dob" class="form-control"
      placeholder="YYYY-MM-DD" required></textarea>
    <div class="error-container" ng-show="(bankForm.dob.$touched || bankForm.dob.$submitted) && bankForm.dob.$invalid" >
      <small class="error" ng-show="bankForm.dob.$error.required">Date of brith can't be blank.</small>
      <span class="error" ng-show="bankForm.dob.$error.date">Not a valid date!</span>
    </div>

    <label class="control-label">Routing number</label>
    <input type="text" name="routingNumber" ng-maxlength=30 ng-model="user.routing_number" class="form-control"
      required></textarea>
    <div class="error-container" ng-show="(bankForm.routingNumber.$touched || bankForm.routingNumber.$submitted) && bankForm.routingNumber.$invalid" >
      <small class="error" ng-show="bankForm.routingNumber.$error.required">Routing number can't be blank.</small>
      <small class="error" ng-show="bankForm.routingNumber.$error.maxlength">Routing number is too long ( max 30 characters ).</small>
    </div>

    <label class="control-label">Account Number</label>
    <input type="text" name="accountNumber" ng-maxlength=30 ng-model="user.account_number" class="form-control"
      required></textarea>
    <div class="error-container" ng-show="(bankForm.accountNumber.$touched || bankForm.accountNumber.$submitted) && bankForm.routingNumber.$invalid" >
      <small class="error" ng-show="bankForm.accountNumber.$error.required">Account Number can't be blank.</small>
      <small class="error" ng-show="bankForm.accountNumber.$error.maxlength">Account Number is too long ( max 30 characters ).</small>
    </div>

    <button type="submit" class="btn btn-primary" ng-click="saveMentorTypeBank()"
      ng-disabled="(bankForm.$dirty || bankForm.$submitted || bankForm.$pristine) && bankForm.$invalid">
      Save
    </button>

</form>
</div>
