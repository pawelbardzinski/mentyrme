<h2>Information we need to pay you</h2>

<%= form_tag save_mentor_path, method: "post" do %>

    <p><%= label_tag("First Name") %>
    <%= text_field_tag :first_name, @user.first_name %></p>
    <p><%= label_tag("Last Name") %>
    <%= text_field_tag :last_name, @user.last_name %></p>
    <p><%= label_tag("Email") %>
    <%= text_field_tag :email, @user.email, size: 30 %></p>
    <p><%= label_tag("Street Address") %>
    <%= text_field_tag :street_address, nil, size: 30 %></p>
    <p><%= label_tag("Postal Code") %>
    <%= text_field_tag :zip_code, nil, size: 10 %></p>
    <p><%= label_tag("City") %>
    <%= text_field_tag :locality, nil, size: 25 %></p>
    <p><%= label_tag("State") %>
    <%= text_field_tag :state, nil, size: 25 %></p>
    <p><%= label_tag("Date of Birth") %>
    <%= date_field_tag :dob %></p>
    <p><%= label_tag("Funding Email") %>
    <%= text_field_tag :funding_email, @user.email, size: 30 %></p>

	<p><input type="submit" value="Save"></p>

<% end %>
