<h2>Information we need to pay you by email</h2>

<div ng-controller="MentorAccountCtrl">
  <tabset justified="true">
    <tab heading="Email">
      <div class="row" style="margin-left:50px">
      <form name="emailForm">
          <label class="control-label">First Name</label>
          <input type="text" name="firstName" ng-minlength=3 ng-model="user.first_name" class="form-control"
            required placeholder="Type First Name"></input>
          <div class="error-container" ng-show="(emailForm.firstName.$touched || emailForm.firstName.$submitted) && emailForm.firstName.$invalid" >
            <small class="error" ng-show="emailForm.firstName.$error.required">First Name can't be blank.</small>
            <small class="error" ng-show="emailForm.firstName.$error.minlength">First Name is too short ( min 3 characters ).</small>
          </div>
          <label class="control-label">Last Name</label>
          <input type="text" name="lastName" ng-minlength=3 ng-model="user.last_name" class="form-control"
            required placeholder="Type Last Name"></input>
          <div class="error-container" ng-show="(emailForm.lastName.$touched || emailForm.lastName.$submitted) && emailForm.lastName.$invalid" >
            <small class="error" ng-show="emailForm.lastName.$error.required">Last Name can't be blank.</small>
            <small class="error" ng-show="emailForm.lastName.$error.minlength">Last Name is too short ( min 3 characters ).</small>
          </div>
          <label class="control-label">Email</label>
          <input type="email" name="email" ng-minlength=3 ng-maxlength=30 ng-model="user.email" class="form-control"
            placeholder="Type email" required></input>
          <div class="error-container" ng-show="(emailForm.email.$touched || emailForm.email.$submitted) && emailForm.email.$invalid" >
            <small class="error" ng-show="emailForm.email.$error.required">Email can't be blank.</small>
            <span class="error" ng-show="emailForm.email.$error.emailValidator"> Email is not valid</span>
            <small class="error" ng-show="emailForm.email.$error.minlength">Email is too short ( min 3 characters ).</small>
            <small class="error" ng-show="emailForm.email.$error.maxlength">Email is too long ( max 30 characters ).</small>
          </div>
          <label class="control-label">Street address</label>
          <input type="text" name="streetAddress" ng-minlength=3 ng-maxlength=30 ng-model="user.street_address" class="form-control"
            placeholder="Type street address" required></textarea>
          <div class="error-container" ng-show="(emailForm.streetAddress.$touched || emailForm.streetAddress.$submitted) && emailForm.streetAddress.$invalid" >
            <small class="error" ng-show="emailForm.streetAddress.$error.required">Street address can't be blank.</small>
            <small class="error" ng-show="emailForm.streetAddress.$error.maxlength">Street address is too long ( max 30 characters ).</small>
            <small class="error" ng-show="emailForm.email.$error.minlength">Street address is too short ( min 3 characters ).</small>
          </div>
          <label class="control-label">Postal Code</label>
          <input type="text" name="postlCode" ng-maxlength=10 ng-model="user.zip_code" class="form-control"
            placeholder="Type postal code" required></textarea>
          <div class="error-container" ng-show="(emailForm.postlCode.$touched || emailForm.postalCode.$submitted) && emailForm.postalCode.$invalid" >
            <small class="error" ng-show="emailForm.postalCode.$error.required">Street address can't be blank.</small>
          </div>


      </form>
      </div>
    </tab>
    <tab heading="Bank">Short Labeled Justified content</tab>
  </tabset>
</div>
