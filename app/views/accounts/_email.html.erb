<h2>Information we need to pay you by email <small>(all fields are required)</small></h2>
<div class="row" style="margin-left:50px">
<form name="emailForm">

    <label class="control-label">First Name</label>
    <input type="text" name="firstName" ng-minlength=3 ng-model="user.first_name" class="form-control"
      required></input>
    <div class="error-container" ng-show="(emailForm.firstName.$touched || emailForm.firstName.$submitted) && emailForm.firstName.$invalid" >
      <small class="error" ng-show="emailForm.firstName.$error.required">First Name can't be blank.</small>
      <small class="error" ng-show="emailForm.firstName.$error.minlength">First Name is too short ( min 3 characters ).</small>
    </div>

    <label class="control-label">Last Name</label>
    <input type="text" name="lastName" ng-minlength=3 ng-model="user.last_name" class="form-control"
      required placeholder="Type Last Name"></input>
    <div class="error-container" ng-show="(emailForm.lastName.$touched || emailForm.lastName.$submitted) && emailForm.lastName.$invalid" >
      <small class="error" ng-show="emailForm.lastName.$error.required">Last Name can't be blank.</small>
      <small class="error" ng-show="emailForm.lastName.$error.minlength">Last Name is too short ( min 3 characters ).</small>
    </div>

    <label class="control-label">Email</label>
    <input type="email" name="email" ng-minlength=3 ng-maxlength=30 ng-model="user.email" class="form-control"
      placeholder="Type email" required></input>
    <div class="error-container" ng-show="(emailForm.email.$touched || emailForm.email.$submitted) && emailForm.email.$invalid" >
      <small class="error" ng-show="emailForm.email.$error.required">Email can't be blank.</small>
      <span class="error" ng-show="emailForm.email.$error.email"> Email is not valid</span>
      <small class="error" ng-show="emailForm.email.$error.minlength">Email is too short ( min 3 characters ).</small>
      <small class="error" ng-show="emailForm.email.$error.maxlength">Email is too long ( max 30 characters ).</small>
    </div>

    <label class="control-label">Street address</label>
    <input type="text" name="streetAddress" ng-minlength=3 ng-maxlength=30 ng-model="user.street_address" class="form-control"
      required></textarea>
    <div class="error-container" ng-show="(emailForm.streetAddress.$touched || emailForm.streetAddress.$submitted) && emailForm.streetAddress.$invalid" >
      <small class="error" ng-show="emailForm.streetAddress.$error.required">Street address can't be blank.</small>
      <small class="error" ng-show="emailForm.streetAddress.$error.maxlength">Street address is too long ( max 30 characters ).</small>
      <small class="error" ng-show="emailForm.streetAddress.$error.minlength">Street address is too short ( min 3 characters ).</small>
    </div>

    <label class="control-label">Postal Code</label>
    <input type="text" name="postalCode" ng-maxlength=10 ng-model="user.zip_code" class="form-control"
      required></textarea>
    <div class="error-container" ng-show="(emailForm.postalCode.$touched || emailForm.postalCode.$submitted) && emailForm.postalCode.$invalid" >
      <small class="error" ng-show="emailForm.postalCode.$error.required">Postal Code can't be blank.</small>
      <small class="error" ng-show="emailForm.postalCode.$error.maxlength">Postal Code is too long ( max 10 characters ).</small>
    </div>

    <label class="control-label">State</label>
    <input type="text" name="state" ng-maxlength=25 ng-model="user.locality" class="form-control"
      required></textarea>
    <div class="error-container" ng-show="(emailForm.state.$touched || emailForm.state.$submitted) && emailForm.state.$invalid" >
      <small class="error" ng-show="emailForm.state.$error.required">State can't be blank.</small>
      <small class="error" ng-show="emailForm.state.$error.maxlength">State is too long ( max 25 characters ).</small>
    </div>


    <label class="control-label">Date of brith</label>
    <input type="date" name="dob" ng-model="user.dob" class="form-control"
      placeholder="YYYY-MM-DD" required></textarea>
    <div class="error-container" ng-show="(emailForm.dob.$touched || emailForm.dob.$submitted) && emailForm.dob.$invalid" >
      <small class="error" ng-show="emailForm.dob.$error.required">Date of brith can't be blank.</small>
      <span class="error" ng-show="emailForm.dob.$error.date">Not a valid date!</span>
    </div>

    <label class="control-label">Funding email</label>
    <input type="email" name="funding_email" ng-minlength=3 ng-maxlength=30 ng-model="user.funding_email" class="form-control"
      required></input>
    <div class="error-container" ng-show="(emailForm.funding_email.$touched || emailForm.funding_email.$submitted) && emailForm.funding_email.$invalid" >
      <small class="error" ng-show="emailForm.funding_email.$error.required">Funding email can't be blank.</small>
      <span class="error" ng-show="emailForm.funding_email.$error.email"> Funding email is not valid</span>
      <small class="error" ng-show="emailForm.funding_email.$error.minlength">Funding email is too short ( min 3 characters ).</small>
      <small class="error" ng-show="emailForm.funding_email.$error.maxlength">Funding email is too long ( max 30 characters ).</small>
    </div>

    <button type="submit" class="btn btn-success" ng-disabled="(emailForm.$dirty || emailForm.$submitted || emailForm.$pristine) && emailForm.$invalid">
      Save
    </button>

</form>
</div>
