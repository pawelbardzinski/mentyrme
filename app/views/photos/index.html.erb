<h1>Photo Gallery</h1>

<%= simple_form_for @photo, url: profile_skill_photos_path(@skill), method: :post do |f| %>
	<p>
		<%= f.label :image_file, "Profile Photo" %>
		<%= f.input :image_file, as: :file, label: false %>
	</p>
	<%= f.submit "Add Photo" %>
<% end %>


<div class="row">
	<% @photos.each do |photo| %>
		<div class="col-sm-4 col-md-3 col-lg-2">
			<%= image_tag photo.image_file.url(:thumb) %>
		</div>
	<% end %>
</div>